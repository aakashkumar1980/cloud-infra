<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress noisy Spring/AWS logs -->
    <logger name="org.springframework" level="WARN" />
    <logger name="software.amazon" level="WARN" />
    <logger name="org.apache" level="WARN" />

    <!-- Show our test logs clearly -->
    <logger name="client_no_aws" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="company_backend" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
